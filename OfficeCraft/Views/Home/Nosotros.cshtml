@model IEnumerable<OfficeCraft.Models.Entities.Producto>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<header class="Nosotros">
    <section class="textos-header">
        <h1>Da vida a tus ideas con las herramientas adecuadas</h1><br />
        <h1>El arte de plasmar ideas</h1>
    </section>
    <!-- Generated by https://smooth.ie/blogs/news/svg-wavey-transitions-between-sections -->

    <div class="wave" style="height: 150px; overflow: hidden;">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
            <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z" style="stroke: none; fill: #fff;"></path>
        </svg>
    </div>
</header>
<main>
    <section class="contenedor sobre-nosotros">
        <h2 class="titulo">Nuestros Productos</h2>
        <div class="contenedor-sobre-nosotros">
            <img src="~/img/fondo2.jpg" alt="" class="imagen-about-us" />
            <div class="contenido-textos">
                <h3>Los mejores productos</h3>
                <p>
                    ¡Bienvenido a OfficeCraft, tu destino creativo para todo lo relacionado con papelería!
                    📎✏️ Sumérgete en un mundo lleno de herramientas inspiradoras para dar vida a tus ideas.
                    Desde elegantes plumas estilográficas hasta blocs de notas que despiertan la creatividad,
                    estamos aquí para equiparte con todo lo necesario para convertir tu espacio de trabajo en un escenario de innovación.
                    Explora nuestro catálogo y descubre el arte de la papelería con OfficeCraft.
                    ¡Prepárate para escribir, dibujar y crear tu camino al éxito! 📚🌟
                </p>

            </div>
        </div>
    </section>
    <div class="mapa">
        <h2>Ubicación</h2>
        <br />
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2821.7809767264876!2d-122.9904381239035!3d44.98876027107014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54bfff6eeffdae61%3A0xb0d6aee41e71f1!2sOFFICECRAFT%2C%20INC!5e0!3m2!1ses!2smx!4v1701576764123!5m2!1ses!2smx" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <a asp-action="Index" asp-controller="Home" type="button" class="btn btn-warning verprod">Ver productos</a>
</main>